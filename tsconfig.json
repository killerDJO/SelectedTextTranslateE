{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": true,
        "strictFunctionTypes": false,
        "experimentalDecorators": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "sourceMap": true,
        "baseUrl": "src/"
    },
    "exclude": [
        "node_modules"
    ]
}