{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "renderer: build-dev",
            "type": "shell",
            "command": "npx webpack --config ./renderer/webpack.config.js --env.NODE_ENV=dev",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "renderer: build-prod",
            "type": "shell",
            "command": "npx webpack --config ./renderer/webpack.config.js --env.NODE_ENV=prod",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "renderer: watch",
            "type": "shell",
            "command": "npx webpack --config ./renderer/webpack.config.js --watch --env.NODE_ENV=dev",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "renderer: dev-server",
            "type": "shell",
            "command": "npx webpack-dev-server --open --config renderer/webpack.config.js --hot --env.NODE_ENV=dev",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "tsc: build - electron",
            "type": "typescript",
            "tsconfig": "main\\tsconfig.json",
            "problemMatcher": [
                "$tsc"
            ],
            "group": "build"
        },
        {
            "label": "tsc: watch - electron",
            "type": "typescript",
            "tsconfig": "main\\tsconfig.json",
            "option": "watch",
            "problemMatcher": [
                "$tsc-watch"
            ],
            "group": "build"
        }
    ]
}