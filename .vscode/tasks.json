{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "webpack: dev-build - app",
            "type": "shell",
            "command": "npx webpack --config ./app/webpack.config.js",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "webpack: watch - app",
            "type": "shell",
            "command": "npx webpack --config ./app/webpack.config.js --watch",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "tsc: build - electron",
            "type": "typescript",
            "tsconfig": "electron\\tsconfig.json",
            "problemMatcher": [
                "$tsc"
            ],
            "group": "build"
        },
        {
            "label": "tsc: watch - electron",
            "type": "typescript",
            "tsconfig": "electron\\tsconfig.json",
            "option": "watch",
            "problemMatcher": [
                "$tsc-watch"
            ],
            "group": "build"
        }
    ]
}