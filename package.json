{
  "name": "selected-text-translate",
  "private": true,
  "productName": "Selected Text Translate",
  "homepage": "https://github.com/yevhenii-andrushchak/SelectedTextTranslateE",
  "version": "2.0.4",
  "description": "Util to translate selected text.",
  "author": "killerDJO",
  "license": "ISC",
  "main": "dist/app/main/main.js",
  "workspaces": [
    "./packages/main",
    "./packages/renderer",
    "./packages/common"
  ],
  "dependencies": {
    "axios": "1.4.0",
    "electron-store": "8.1.0",
    "https-proxy-agent": "6.1.0",
    "inversify": "6.0.1",
    "lodash": "4.17.21",
    "module-alias": "2.2.2",
    "reflect-metadata": "0.1.13",
    "rxjs": "7.8.1",
    "winston": "3.8.2"
  },
  "scripts": {
    "clean:common": "npm run clean --workspace=@selected-text-translate/common",
    "build:common": "npm run build --workspace=@selected-text-translate/common",
    "build:main": "npm run build --workspace=@selected-text-translate/main",
    "build:renderer": "npm run build --workspace=@selected-text-translate/renderer",
    "watch:main": "npm run watch --workspace=@selected-text-translate/main",
    "watch:renderer": "npm run watch --workspace=@selected-text-translate/renderer",
    "build": "rimraf ./dist && npm run build:main && npm run build:renderer",
    "start": "electron ./dist/app/main/main.js",
    "pack": "node build-scripts/package.js",
    "create-installer": "node build-scripts/create-installer.js",
    "create-release": "npm run native-rebuild && npm run build && npm run pack && npm run create-installer",
    "start:debug": "electron ./dist/app/main/main.js --inspect",
    "lint": "npm run lint --workspace=@selected-text-translate/main --workspace=@selected-text-translate/renderer",
    "native-rebuild": "node build-scripts/build-native.js && npx electron-rebuild --parallel"
  },
  "devDependencies": {
    "electron": "24.3.0",
    "electron-packager": "17.1.1",
    "electron-rebuild": "3.2.9",
    "electron-winstaller": "5.1.0",
    "eslint": "8.40.0",
    "nan": "2.17.0",
    "prettier": "2.8.8",
    "rimraf": "5.0.0",
    "typescript": "5.0.4"
  }
}
